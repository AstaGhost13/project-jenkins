pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Construyendo el proyecto'
                sh 'composer install'
            }
        }
        stage('Test') {
            steps {
                echo 'Ejecutando pruebas'
                sh './vendor/bin/phpunit --testdox'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Desplegando'
                sh './scripts/deploy.sh'
            }
        }
    }
    post {
        success {
            echo 'Pipeline completado exitosamente.'
        }
        failure {
            echo 'El pipeline fall√≥.'
        }
    }
}
