pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Construyendo el proyecto...'
                // En PHP normalmente no se compila, pero puedes instalar dependencias:
                sh 'composer install'
            }
        }
        stage('Test') {
            steps {
                echo 'Ejecutando pruebas...'
                sh './vendor/bin/phpunit --testdox'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Desplegando...'
                // Aquí puedes usar rsync, SCP o Docker según tu entorno de pruebas
                sh './scripts/deploy.sh'
            }
        }
    }
    post {
        success {
            echo 'Pipeline completado exitosamente.'
        }
        failure {
            echo 'El pipeline falló.'
        }
    }
}
